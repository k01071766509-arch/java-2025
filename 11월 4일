package caring;

public interface Tire {
	int carpacity;
	int consume;
	
	
	Tire(int capacity, int consume) {
		this.capacity = capacity;
		this.consume = consume;
	}
	
	vois UseTire() {
		capacity -= consume;
	}

}
	abstract boolean IsAbailable();
	


}
package caring;

public class Env {
	static boolean isRain = false;

}
package caring;

public class DryTire extends Tire {
	wetTire( int capacity, int consume) {
		super( capacity, consume);
	

}
	boolean IsAbailable();
	if(Env.isRain) return false;
	return capacity - consume > 0;


}
package caring;

public class wetTire extends Tire {
	wetTire( int capacity, int consume) {
		super( capacity, consume)
	}
	boolean IsAbailable();
	return capacity - consume > 0;



}



